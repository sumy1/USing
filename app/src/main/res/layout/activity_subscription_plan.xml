<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <include layout="@layout/toolbar_logo_view" />

    <LinearLayout
        android:id="@+id/screen_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/margin_25dp"
        android:layout_marginEnd="@dimen/margin_25dp"
        android:orientation="vertical">

        <com.usingstudioo.View.NBTextView
            android:id="@+id/tv_start_subs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_30dp"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/margin_3dp"
            android:text="@string/please_choose_subscription"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/text_size_xxlarge" />




        <androidx.cardview.widget.CardView
            android:id="@+id/card_sing_music"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="@dimen/margin_20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal">


                <com.usingstudioo.View.NBTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:text="Monthly"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="bold" />


                <com.usingstudioo.View.NBTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/margin_start_vary_10"
                    android:text="119 ฿"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="bold" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <com.usingstudioo.View.NBTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:gravity="center"
            android:text="@string/or_txt"
            android:textAllCaps="false"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/text_size_regular" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_vocal_booth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="@dimen/margin_20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal">


                <com.usingstudioo.View.NBTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:text="Annual"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="bold" />

                <com.usingstudioo.View.NBTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/margin_start_vary_10"
                    android:text="949 ฿"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="bold" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>