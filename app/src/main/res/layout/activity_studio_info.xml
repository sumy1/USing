<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageButton
        android:id="@+id/bt_back"
        android:layout_width="@dimen/margin_30dp"
        android:layout_height="@dimen/margin_30dp"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:background="@null"
        android:src="@drawable/arrow"
        android:scaleType="fitCenter"
        android:scaleX="-1"
        android:contentDescription="@string/app_desc"/>

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_40dp">

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardCornerRadius="100dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:layout_centerInParent="true">

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/ripple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:rb_color="@color/theme_transparent"
                app:rb_radius="20dp"
                app:rb_rippleAmount="10"
                app:rb_duration="10000"
                app:rb_scale="6"
                android:gravity="center"
                android:visibility="gone">
            </com.skyfishjy.library.RippleBackground>
        </androidx.cardview.widget.CardView>
        <ImageView
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:src="@drawable/infographic2"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_desc"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_layout"
        android:layout_marginTop="@dimen/margin_20dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/margin_20dp"
            android:layout_height="@dimen/margin_20dp"
            android:background="@drawable/canvas_round_number_bg"
            android:layout_gravity="center"
            android:gravity="center">

            <com.usingstudioo.View.NBTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="@dimen/text_size_ideal"
                android:textColor="@color/black_semi_transparent"/>
        </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:background="@color/theme_color"/>

        <com.usingstudioo.View.NBTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/info1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xlarge"/>

        <LinearLayout
            android:layout_width="@dimen/margin_20dp"
            android:layout_height="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/canvas_round_number_bg"
            android:layout_gravity="center"
            android:gravity="center">

            <com.usingstudioo.View.NBTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="@dimen/text_size_ideal"
                android:textColor="@color/black_semi_transparent"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:background="@color/theme_color"/>

        <com.usingstudioo.View.NBTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/info2"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xlarge"/>

        <LinearLayout
            android:layout_width="@dimen/margin_20dp"
            android:layout_height="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/canvas_round_number_bg"
            android:layout_gravity="center"
            android:gravity="center">

            <com.usingstudioo.View.NBTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="@dimen/text_size_ideal"
                android:textColor="@color/black_semi_transparent"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:background="@color/theme_color"/>

        <com.usingstudioo.View.NBTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/info3"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xlarge"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_studio"
            android:layout_width="180dp"
            android:layout_height="@dimen/margin_40dp"
            android:layout_marginTop="@dimen/margin_25dp"
            app:cardCornerRadius="@dimen/margin_20dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center">

                <com.usingstudioo.View.NBTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black_semi_transparent"
                    android:text="@string/get_started"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textAllCaps="true"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <!--<com.usingstudio.View.NBButton
            android:id="@+id/card_studio"
            android:layout_width="180dp"
            android:layout_height="@dimen/margin_40dp"
            android:layout_marginTop="@dimen/margin_25dp"
            android:gravity="center"
            android:textColor="@color/black_semi_transparent"
            android:text="@string/get_started"
            android:textSize="@dimen/text_size_xlarge"
            android:textAllCaps="true"
            android:background="@drawable/canvas_white_round_btn_bg"
            android:foreground="?attr/selectableItemBackground"/>-->


    </LinearLayout>


</RelativeLayout>