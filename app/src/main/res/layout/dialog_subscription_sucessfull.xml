<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/item"
    android:layout_gravity="center"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_start_vary_10"
        android:background="@drawable/canvas_round_corner_blackk"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/margin_25dp"
            android:layout_height="@dimen/margin_25dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_close"
            android:layout_marginTop="-5dp"
            android:visibility="gone"
            android:layout_marginRight="-5dp"
            android:layout_alignParentEnd="true"
            android:tint="@color/black"
            android:contentDescription="@string/app_name" />
        <ImageView
            android:id="@+id/iv_congrats"
            android:layout_width="@dimen/margin_35dp"
            android:layout_height="@dimen/margin_35dp"
            android:layout_marginTop="@dimen/margin_start_vary_15"
            android:src="@drawable/tick"
            android:layout_centerHorizontal="true"
            android:tint="@color/theme_color"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name" />
        <com.usingstudioo.View.NBTextView
            android:id="@+id/tv_thanks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_start_vary_20"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_below="@+id/iv_congrats"
            android:gravity="center"
            android:text="Thanks For Your Subscription"
            android:layout_marginStart="@dimen/margin_start_vary_20"
            android:layout_marginEnd="@dimen/margin_start_vary_20"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_xlarge"/>

        <com.usingstudioo.View.NBTextView
            android:id="@+id/tv_lets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_start_vary_10"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/tv_thanks"
            android:lineSpacingExtra="2dp"
            android:visibility="gone"
            android:text="Thanks For Your Subscription"
            android:layout_marginStart="@dimen/margin_start_vary_10"
            android:layout_marginEnd="@dimen/margin_start_vary_10"
            android:textColor="@color/dim_grey"
            android:textSize="@dimen/text_size_regular"/>
        <com.usingstudioo.View.NBTextView
            android:id="@+id/tv_happysinging"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="visible"
            android:layout_below="@+id/tv_lets"
            android:text="@string/happysinging"
            android:layout_marginTop="@dimen/margin_start_vary_10"
            android:layout_marginStart="@dimen/margin_start_vary_20"
            android:layout_marginEnd="@dimen/margin_start_vary_20"
            android:textColor="@color/half_black"
            android:textSize="@dimen/text_size_large"/>
        <com.usingstudioo.View.NBButton
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:layout_below="@+id/tv_happysinging"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:background="@drawable/canvas_login_btn_bg"
            android:layout_gravity="center"
            android:text="@string/proceed_register"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large"
            android:gravity="center"/>
    </RelativeLayout>
</RelativeLayout>