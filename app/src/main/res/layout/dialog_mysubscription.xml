<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/item"
    android:layout_gravity="center"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/canvas_round_corner_black"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/tick"
            android:tint="@color/theme_color"
            android:contentDescription="@string/app_desc"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_close"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@null"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_close"
            android:tint="@color/theme_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginEnd="@dimen/margin_20dp"
            android:layout_marginBottom="@dimen/margin_start_vary_20"
            android:orientation="vertical"
            android:focusableInTouchMode="true">

            <com.usingstudioo.View.NBTextView
                android:id="@+id/tv_subcription_paln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/text_size_large"/>

            <com.usingstudioo.View.NBTextView
                android:id="@+id/tv_subcription_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="@string/old_password"
                android:textColor="@color/dim_grey"
                android:textSize="@dimen/text_size_large"/>

            <com.usingstudioo.View.NBTextView
                android:id="@+id/tv_subcription_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text="@string/old_password"
                android:textColor="@color/dim_grey"
                android:textSize="@dimen/text_size_large"/>



        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>