<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:colorControlHighlight">@color/half_black</item>
        <!-- Customize your theme here. -->
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>

        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <!-- Change Overflow Menu ListView Item Height & Property -->
        <item name="android:listPreferredItemHeightSmall">35dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dashboard" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:colorControlHighlight">@color/half_black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
    </style>


    <style name="spinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem"/>

    <style name="ProgressTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:windowBackground">@drawable/canvas_progressdialog</item>
    </style>

    <style name="AlertDialog.Holo" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowActionBarOverlay">false</item>
        <!--For compatibility-->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="windowActionBarOverlay">false</item>
    </style>
    <style name="MyActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
        <!--For compatibility-->
        <item name="background">@color/white</item>
    </style>
    <style name="MenuItems" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="formDropDown">
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:background">@drawable/canvas_dialog_bg</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Change Overflow Menu ListView Divider Property -->
    <style name="PopupMenuListView" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:divider">#26DFD176</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <!-- Change Overflow Menu Background -->
    <style name="PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">#888888</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#ffffff</item>
        <item name="android:progressTint">#DFD176</item>
        <item name="android:colorControlActivated">#D9983C</item>
    </style>

    <style name="CustomSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#ffffff</item>
        <item name="android:progressTint">#DFD176</item>
        <item name="android:colorControlActivated">#D9983C</item>
    </style>

</resources>

